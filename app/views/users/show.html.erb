<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
    </div>

    <div class='col-md-9 offset-md-1'>
      <h2>Vtubers</h2>
      <%= render 'vtubers/index',vtubers: @vtubers %>

    <% if @user == current_user %>
      <%=link_to "下書き一覧", confirm_user_path(@user)%>
      <%= link_to "いいねしたVtuber", favorites_user_path(@user) %>
    <% end %>
    </div>
  </div>
</div>
