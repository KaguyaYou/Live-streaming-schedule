<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>所属事務所</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% vtubers.each do |vtuber| %>
      <tr>
        <td>
          <%= link_to vtuber_path(vtuber) do %>
            <% if vtuber.image.attached? %>
              <%= image_tag vtuber.image, size:'50x70' %>
            <% else %>
              <%= image_tag("no_image.jpg") %> <!--画像が添付されていない場合の表示 -->
            <% end %>
          <% end %>
        </td>
        <td><%= link_to vtuber.name,vtuber, class: "vtuber_#{vtuber.id}" %></td>
        <td><%= vtuber.belonging_office %></td>
        <td class=<%= "favorite-#{vtuber.id}" %> >
          <%= render "favorites/btn", vtuber: vtuber %>
        </td>
        <td><%= render 'vtuber_comments/counter', vtuber: vtuber %></td>
      </tr>
    <% end %>
  </tbody>
</table>